<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dmaiseuicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:civ_border_color="#F44336"
        app:civ_border_width="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/user_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/user_name"
        android:text="Usuario"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/dmaiseuicon"
        app:layout_constraintTop_toTopOf="@id/dmaiseuicon"
        app:layout_constraintBottom_toBottomOf="@id/dmaiseuicon"/>
</androidx.constraintlayout.widget.ConstraintLayout>